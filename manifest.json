{
  "author": "igorlogius",
  "homepage_url": "https://github.com/igorlogius/save-website-as-image",
  "background": {
	"scripts": ["background.js"]
  },
  "browser_action": {
    "theme_icons": [
      {
        "light": "icon.png",
        "dark": "dark.png",
        "size": 128
      }
    ]
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Alt+S"
      }
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "manifest_version": 2,
  "name": "Save Website as Image",
  "description": "Simple addon, to save the full website of one or more tabs as a png image either via a click on the toolbar icon or via a custom shotcut",
  "permissions": [
    "notifications",
    "storage",
    "<all_urls>"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "version": "1.4.14"
}
