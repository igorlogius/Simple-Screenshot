{
  "icons": {
    "128": "icon.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Alt+S"
      }
    }
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Simple-Screenshot",
    "default_popup": "background.html"
  },
  "description": "Take a screenshot of the currently activ tab",
  "manifest_version": 2,
  "name": "Simple-Screenshot",
  "permissions": [
    "activeTab"
    ,"<all_urls>"
  ],
  "version": "1.0.1"
}

