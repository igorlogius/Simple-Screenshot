{
  "browser_action": {
    "browser_style": true,
    "default_popup": "background.html",
    "default_title": "simple-screenshot"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Alt+S"
      }
    }
  },
  "description": "Take a screenshot of the currently activ tab",
  "icons": {
    "128": "icon.png"
  },
  "manifest_version": 2,
  "name": "simple-screenshot",
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  "version": "1.0.1"
}
